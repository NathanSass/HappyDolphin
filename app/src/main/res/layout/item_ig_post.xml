<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin">
    <RelativeLayout
        android:id="@+id/rlProfileInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/profile_marginBottom">
        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="@dimen/profile_image_size"
            android:layout_height="@dimen/profile_image_size"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/tvProfileName"
            android:layout_toRightOf="@id/ivProfileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/profileText_marginLeft"
            android:layout_marginTop="@dimen/profileText_marginTop"
            android:textStyle="bold"
            tools:text="@string/defaultUsername"/>

    </RelativeLayout>
    <ImageView
        android:id="@+id/ivPostImage"
        android:layout_below="@id/rlProfileInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/placeholder"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_below="@id/ivPostImage"
        android:layout_marginTop="@dimen/vertical_margin_likeWidget"
        android:layout_marginBottom="@dimen/vertical_margin_likeWidget"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivLikeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_like_icon"
            android:src="@drawable/ic_heart_stroke"/>
        <TextView
            android:id="@+id/tvLikeCount"
            android:layout_marginTop="@dimen/margin_top_icon"
            android:layout_toRightOf="@id/ivLikeIcon"
            android:layout_marginRight="@dimen/margin_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/defaultLikeCount"/>
        <TextView
            android:id="@+id/tvLikeCountText"
            android:layout_marginTop="@dimen/margin_top_icon"
            android:layout_toRightOf="@id/tvLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/likes"/>
    </RelativeLayout>
</RelativeLayout>